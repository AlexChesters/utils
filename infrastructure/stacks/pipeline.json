{
  "Description": "Pipeline configuration for alexchesters-utils",
  "Outputs": {
    "BucketArn": {
      "Description": "S3 bucket ARN used to store alexchesters-utils builds",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-bucket-arn"
        }
      },
      "Value": {
        "Fn::GetAtt": [
          "Bucket",
          "Arn"
        ]
      }
    },
    "BucketName": {
      "Description": "S3 bucket name used to store alexchesters-utils builds",
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-bucket-name"
        }
      },
      "Value": {
        "Ref": "Bucket"
      }
    }
  },
  "Resources": {
    "CodeBuildRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "CodeBuildRolePolicy",
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "ssm:GetParameters"
                  ],
                  "Resource": [
                    "arn:aws:ssm:eu-west-1:008356366354:parameter/CodeBuild/GitHub-Token"
                  ],
                  "Effect": "Allow",
                  "Sid": "SSMPolicy"
                },
                {
                  "Action": [
                    "ecr:BatchCheckLayerAvailability",
                    "ecr:CompleteLayerUpload",
                    "ecr:GetAuthorizationToken",
                    "ecr:InitiateLayerUpload",
                    "ecr:PutImage",
                    "ecr:UploadLayerPart"
                  ],
                  "Resource": "*",
                  "Effect": "Allow",
                  "Sid": "ECRPolicy"
                },
                {
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    "*"
                  ],
                  "Effect": "Allow",
                  "Sid": "CloudWatchLogsPolicy"
                },
                {
                  "Action": [
                    "sts:AssumeRole"
                  ],
                  "Resource": [
                    "*"
                  ],
                  "Effect": "Allow",
                  "Sid": "AssumeRolePolicy"
                },
                {
                  "Action": [
                    "s3:GetObject",
                    "s3:PutObject",
                    "s3:PutObjectAcl",
                    "s3:DeleteObject"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          {
                            "Fn::GetAtt": [
                              "Bucket",
                              "Arn"
                            ]
                          },
                          "/*"
                        ]
                      ]
                    }
                  ],
                  "Effect": "Allow",
                  "Sid": "S3Policy"
                }
              ]
            }
          }
        ],
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codebuild.amazonaws.com"
                ]
              }
            }
          ]
        }
      }
    },
    "Repository": {
      "Type": "AWS::ECR::Repository",
      "DependsOn": "CodeBuildRole",
      "Properties": {
        "RepositoryName": "alexchesters-utils-ci-image",
        "LifecyclePolicy": {
          "LifecyclePolicyText": "{\"rules\":[{\"rulePriority\":1,\"description\":\"Expire images older than a week\",\"selection\":{\"tagStatus\":\"untagged\",\"countType\":\"sinceImagePushed\",\"countUnit\":\"days\",\"countNumber\":7},\"action\":{\"type\":\"expire\"}}]}"
        },
        "RepositoryPolicyText": {
          "Statement": [
            {
              "Sid": "CodeBuildAccess",
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "codebuild.amazonaws.com"
                ],
                "AWS": {
                  "Fn::GetAtt": ["CodeBuildRole", "Arn"]
                }
              },
              "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
                "ecr:BatchCheckLayerAvailability"
              ]
            }
          ]
        }
      }
    },
    "ImageProject": {
      "Type": "AWS::CodeBuild::Project",
      "DependsOn": "CodeBuildRole",
      "Properties": {
        "Artifacts": {
          "Type": "NO_ARTIFACTS"
        },
        "BadgeEnabled": "true",
        "Cache": {
          "Type": "NO_CACHE"
        },
        "Description": "Builds the CodeBuild image for alexchesters-utils",
        "Environment": {
          "ComputeType": "BUILD_GENERAL1_SMALL",
          "Image": "aws/codebuild/docker:17.09.0",
          "Type": "LINUX_CONTAINER",
          "EnvironmentVariables": [
            {
              "Name": "AWS_DEFAULT_REGION",
              "Value": "eu-west-1",
              "Type": "PLAINTEXT"
            },
            {
              "Name": "AWS_ACCOUNT_ID",
              "Value": "008356366354",
              "Type": "PLAINTEXT"
            },
            {
              "Name": "IMAGE_REPO_NAME",
              "Value": {
                "Ref": "Repository"
              },
              "Type": "PLAINTEXT"
            },
            {
              "Name": "IMAGE_TAG",
              "Value": "latest",
              "Type": "PLAINTEXT"
            }
          ]
        },
        "Name": "alexchesters-utils--image",
        "ServiceRole": {
          "Ref": "CodeBuildRole"
        },
        "Source": {
          "Auth": {
            "Type": "OAUTH"
          },
          "BuildSpec": "ci/buildspec.image.yml",
          "GitCloneDepth": "1",
          "Location": "https://github.com/AlexChesters/utils.git",
          "Type": "GITHUB"
        }
      }
    },
    "APIProject": {
      "Type": "AWS::CodeBuild::Project",
      "DependsOn": "CodeBuildRole",
      "Properties": {
        "Artifacts": {
          "Type": "NO_ARTIFACTS"
        },
        "BadgeEnabled": "true",
        "Cache": {
          "Type": "NO_CACHE"
        },
        "Description": "Builds, tests and deploys alexchesters-utils",
        "Environment": {
          "ComputeType": "BUILD_GENERAL1_SMALL",
          "Image": "008356366354.dkr.ecr.eu-west-1.amazonaws.com/alexchesters-utils-ci-image:latest",
          "Type": "LINUX_CONTAINER",
          "EnvironmentVariables": [
            {
              "Name": "BUILDS_BUCKET",
              "Value": {
                "Ref": "Bucket"
              },
              "Type": "PLAINTEXT"
            }
          ]
        },
        "Name": "alexchesters-utils",
        "ServiceRole": {
          "Ref": "CodeBuildRole"
        },
        "Source": {
          "Auth": {
            "Type": "OAUTH"
          },
          "BuildSpec": "ci/buildspec.utils.yml",
          "GitCloneDepth": "1",
          "Location": "https://github.com/AlexChesters/utils.git",
          "Type": "GITHUB"
        }
      }
    },
    "ImageLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/codebuild/alexchesters-utils--image",
        "RetentionInDays": "3"
      }
    },
    "APILogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/codebuild/alexchesters-utils",
        "RetentionInDays": "3"
      }
    },
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketName": "alexchesters-utils"
      }
    }
  }
}
